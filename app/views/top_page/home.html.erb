<% if logged_in?%>
    <p>直近で旅行した人を表示する <%= 10 %> 件の表示</p>
        <% @posts.each do |post|%>
            <ul>
                <%= image_tag "#{post.user.image}",size: "50x50" %>
                <%= link_to post.user.name, post.user %>
                <%= render "users/visited" , post: post %>
            </ul>
        <% end %>
    <%= link_to "投稿する",new_post_path %>
<% else %>
    <div class="center jumbotron">
        <h1>あなたの旅を記録しよう</h1>
            <p>~~map~~</p>
        
        <p><%= link_to("ログイン",new_user_session_path) %></p>
        <p><%= link_to("新規登録",new_user_registration_path) %></p>
    </div>
<% end %>