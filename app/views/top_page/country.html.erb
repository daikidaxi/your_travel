<% provide(:title, "#{@name}") %>
<% breadcrumb :country,@name %>

<p></p>
<div class="container">
  <div class="container country-info">
    <div class="row">
        <div class="col-sm-4 offset-sm-2 central-hori"><img src="https://flagpedia.net/data/flags/h120/<%=@code.downcase%>.png"></div>
        <div class="col-sm-6 central-vert large-font"><%=@name%></div>

    </div>
    <hr>

    <div class="row">
      <%=@info%>
    </div>
    <div class="text-right">
      <p>（<%= link_to"Wikipedia","https://ja.wikipedia.org/wiki/#{@name}"%>より引用）</p>
    </div>
  </div>

  <hr>
  <%= render "shared/map",{results: @results, name: @name} %>
  <hr>
  <div class="row">
    <div class="container">

      <h3>みんなの投稿</h3><br/>

      <% if @posts.length==0%>
        <p>まだ訪れた人はいません</p>
      <% else %>
        <div class="container">
          <% @posts.each do |post| %>
              <%= render"users/visited",post: post %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
