<% provide(:title, "#{@name}") %>
<% breadcrumb :country,@name %>

<div class="container">
  <div class="row">
    <div><img src="https://flagpedia.net/data/flags/h120/<%=@code.downcase%>.webp"></div>
    <div><%=@name%></div>
  </div>
<hr>

  <div class="row">
    wikiAPI<br/>
    <%=@info%>
  </div>
<hr>
  <div class="row">
    <= render "shared/map_kai",posts: @posts %>
  </div>
<hr>

  <div class="row">
    みんなの投稿
    <% if @posts.length==0%>
      まだ訪れた人はいません
