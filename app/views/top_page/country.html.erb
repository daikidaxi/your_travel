<% provide(:title, "#{@name}") %>
<% breadcrumb :country,@name %>

<p></p>
<div class="container">
  <div class="container country-info">
    <div class="row">
        <div class="col-sm-4 offset-sm-2 central-hori"><img src="https://flagpedia.net/data/flags/h120/<%=@code.downcase%>.webp"></div>
        <div class="col-sm-6 central-vert large-font"><%=@name%></div>

    </div>
    <hr>

    <div class="row">
      <%=@info%>
    </div>
    <div class="text-right">
      <p>（<%= link_to"Wikipedia","https://ja.wikipedia.org/wiki/#{@name}"%>より引用）</p>
    </div>
  </div>

  <hr>
  <%= render "shared/map",{results: @results} %>
  <hr>

  <div class="row">
    みんなの投稿
    <% if @posts.length==0%>
      まだ訪れた人はいません
    <% else %>
      <div class="container">
        <% @posts.each do |post| %>
            <%= render"users/visited",post: post %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
