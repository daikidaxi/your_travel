<% if post.nil?%>
<% elsif post.photo.url == "default.png"%>
  <%= link_to (image_tag "https://flagpedia.net/data/flags/w580/#{post.country_code.downcase}.webp", class: "photo-visited"), post_path(post.id) %>
<% else %>
  <%= link_to (image_tag "#{post.photo}", class: "photo-visited"), post_path(post.id) %>
<% end %>
