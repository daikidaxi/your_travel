<% if post.liked_by?(current_user)%>
  <%=link_to image_tag("liked.png",width: '16'), post_likes_path(post.id), method: :delete, remote: true,post: post %>
<% else %>
  <%=link_to image_tag("liked_non.png",width: '16'), post_likes_path(post.id), method: :post, remote: true,post: post %>
<% end %>
