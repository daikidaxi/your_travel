<% provide(:title, 'ユーザー') %>
<% breadcrumb :users %>

<div class="container" style="max-width: 700px;">
  <h3 class="text-center">ユーザー一覧</h3>
  <div class="row">
    <div class = "mx-auto" style="width: 500px;">
      <ul class="users">
        <% @users.each do |user| %>
          <li>
            <%= image_tag "#{user.image}",size: "100x100",:class=>"img_circle" %>
            <%= link_to user.name, user %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>