<% users.each do |user| %>
  <div class="row offset-md-3 col-md-7 user-card">
    <div class="col-sm-3">
      <%= image_tag "#{user.image}",size: "100x100",:class=>"img_circle" %>
    </div>
    <div class="col-sm-4 central-vert font-standard">
      <span><%=image_tag "https://flagpedia.net/data/flags/h24/#{country_code(user.nationality)}.webp"%><%= link_to user.name, user %></span>
    </div>
    <div class="col-sm-5 central-vert">
      <span> <%= render"follow",user: user %></span>
    </div>
  </div>
<% end %>