<% provide(:title, "#{@user.name}") %>
<% breadcrumb :user,@user %>

<div class="container">
  <div class="row margin-vert">
    <div class="col-sm-3 offset-sm-2 central-hori">
      <%= image_tag "#{@user.image}", class:"icon_image" %><br/>
    </div>
    <div class="col-sm-7 user-total central-vert">
      <div class="container">
        <span><%= @user.name %><br/></span>
        <span><%= @user.nationality %> 出身<br/></span>
        <span><%= @posts.count+1%>/<%=numberofcontries%> ヵ国訪問<br/></span>
        <p><%=link_to "フォロー", follows_user_path(@user.id) %> <%=link_to "フォロワー", followers_user_path(@user.id) %></p>
        <% if logged_in? and current_user.id==@user.id %>
          <%= link_to "ユーザー情報を編集する",edit_user_registration_path(params[:id])%>
        <% end %>
        <%= render "follow" ,user: @user%>
      </div>
    </div>
  </div>

    <%= render "shared/map",{posts: @posts,latest_post: @latest_post} %>
  </div>

  <div class="row">
    <div class="container last_visited">
      <p>最後に訪れた国</p>
      <ul>
        <%= render "visited" , post: @latest_post %>
      </ul>
    </div>
  </div>
  
  <div class="row">
    <section class="user_posts">
      <div class="col-md-8">
        <% if @posts.any? or @latest_post.present? %>  
          <p>訪れた国</p>
          <% @posts.each do |post|%>
            <ul>
              <%= render "visited" , post: post %>
            </ul>
          <% end %>
        <% else %>
          <h2>あなたが訪れた国を投稿してください</h2>
          <%= link_to "投稿する",new_post_path %>
        <% end %>
      </div>
    </section>
  </div>
  <p></p>
</div>